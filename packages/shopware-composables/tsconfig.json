{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "types": [
      "vue",
      "vite/client",
      "vitest/globals"
    ],
    "paths": {
      "#types": [
        "./src/types/operations.d.ts"
      ],
      "#store-types": [
        "./api-types/storeApiTypes.d.ts"
      ]
    },
    "typeRoots": [
      "./node_modules"
    ]
  },
  "include": [
    "src/**/*",
    "../components/src/injects"
  ]
}
