{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "verbatimModuleSyntax": true,
    "types": [
      "vue",
      "vite/client",
      "vitest/globals"
    ],
    "paths": {
      "#api-types": [
        "./api-types/storeApiTypes.d.ts"
      ]
    },
    "typeRoots": [
      "./node_modules",
      "./api-types"
    ]
  },
  "include": [
    "src/**/*",
    "../components/src/injects"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
